# =============================================================================
# Briefly Backend - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# =============================================================================
# REQUIRED
# =============================================================================

# GNews API Key - Get yours at https://gnews.io
GNEWS_API_KEY=your_gnews_api_key_here

# =============================================================================
# SECURITY (Generate strong values for production!)
# =============================================================================

# JWT Secret for token signing (min 32 characters recommended)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=briefly-secret-key-2024-change-in-prod

# JWT Token expiry in days
JWT_EXPIRE_DAYS=30

# =============================================================================
# SERVER
# =============================================================================

# Server port (Render sets this automatically)
PORT=8000

# Environment: development | staging | production
ENVIRONMENT=development

# =============================================================================
# CORS (Comma-separated origins for production)
# =============================================================================

# Allowed origins for CORS
# Example: https://your-frontend.onrender.com,https://yourdomain.com
ALLOWED_ORIGINS=*

# =============================================================================
# OPTIONAL: Future Database Migration
# =============================================================================

# MongoDB connection string (for future migration)
# MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net

# PostgreSQL connection string (alternative)
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# =============================================================================
# OPTIONAL: Rate Limiting
# =============================================================================

# Requests per minute per IP
# RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# OPTIONAL: Logging
# =============================================================================

# Log level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO
